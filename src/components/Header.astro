---
import Navbar from "./Navbar.astro";
import { Icon } from 'astro-icon/components'
---
<header>
    <div id="announcement" class="text-center bg-yellow-600 px-4 py-2 flex items-center">
        <p class="w-full">This is a WIP concept for a new Hangar design. You can view the source code <a target="_blank" class="underline" href="https://github.com/fabianmakila/hangar-new-design-concept">here</a>.</p>
        <button id="close" class="ml-auto text-xl">
            <Icon name="fa6-solid:xmark" />
        </button>
    </div>
    <Navbar />
</header>

<script>
    const announcement = document.querySelector('#announcement');
    const closeButton = document.querySelector('#close');
    closeButton?.addEventListener('click', () => {
        announcement.classList.add('hidden');
    })
</script>