---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
import { Icon } from 'astro-icon/components'
---

<div class="max-w-screen-xl mx-auto">
    <div class="flex justify-between py-2 px-4 items-center">
        <div class="flex items-center gap-2 font-bold text-xl">
            <Image src={logo} alt="" class="h-12 w-auto" />
            <h2>Hangar</h2>
        </div>
        <div class="bg-zinc-900 rounded border-zinc-800 border-2">
            <input type="text" placeholder="Search" class="bg-transparent p-2">
        </div>
        <div class="flex gap-4">
            <button class="relative hover:bg-blue-500 p-2 rounded">
                <Icon name="fa6-solid:bell" class="text-2xl" />
                <div class="absolute top-0 right-0 rounded-full px-1 text-xs bg-red-500">16</div>
            </button>
            <button>
                <img src="https://placehold.co/200" class="inline-block h-8 w-auto rounded" />
                FabianAdrian
            </button>
        </div>
    </div>
</div>