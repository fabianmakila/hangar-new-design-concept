---
import IconValuePair from "../IconValuePair.astro";
---

<div class="flex flex-col">
    <label class="bg-zinc-800 px-4 py-2 rounded-t font-bold" for="sorting">
        <IconValuePair name="fa6-solid:sort" value="Sort by" />
    </label>

    <select class="bg-zinc-900 rounded-b py-2 px-4 hover:bg-blue-500" name="sorting" id="sorting">
        <option value="most-stars">Most Stars</option>
        <option value="recent-downloads">Recent Downloads</option>
        <option value="most-downloads">Most Downloads</option>
        <option value="recently-updated">Recently Updated</option>
        <option value="newest">Newest</option>
    </select> 
</div>